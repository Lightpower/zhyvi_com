<h1>Listing feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th>File link</th>
      <th>Data</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.event.try(:title) %></td>
        <td><%= feedback.user.try(:show_name) %></td>
        <td><%= feedback.file_link.try(:url) %></td>
        <td><%= feedback.data %></td>
        <td><%= link_to 'Показать', feedback %></td>
        <td><%= link_to 'Править', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Удалить', feedback, method: :delete, data: { confirm: 'Точно удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path %>
