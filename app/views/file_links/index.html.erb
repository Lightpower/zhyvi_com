<h1>Listing file_links</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Url</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @file_links.each do |file_link| %>
      <tr>
        <td><%= file_link.type %></td>
        <td><%= file_link.url %></td>
        <td><%= file_link.user %></td>
        <td><%= link_to 'Показать', file_link %></td>
        <td><%= link_to 'Править', edit_file_link_path(file_link) %></td>
        <td><%= link_to 'Удалить', file_link, method: :delete, data: { confirm: 'Точно удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

