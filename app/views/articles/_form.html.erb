<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> не дают сохранить объект:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type, 'Тип' %><br>
    <%= f.text_field :type %>
  </div>
  <div class="field">
    <%= f.label :category_id, 'ID категории' %><br>
    <%= f.text_field :category_id %>
  </div>
  <div class="field">
    <%= f.label :title, 'Заголовок' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :preview, 'Предпросмотр' %><br>
    <%= f.text_area :preview %>
  </div>
  <div class="field">
    <%= f.label :data, 'Текст' %><br>
    <%= f.text_area :data %>
  </div>
  <div class="field">
    <%= f.label :user_id, 'ID автора' %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить' %>
  </div>
<% end %>
